{% extends "StartStartBundle::layout.html.twig" %}

{% block title %} {{title}} {% endblock %}

{% block content %}
{% if error %}
    <div>{{ error.message }}</div>
{% endif %}
<fieldset id="login_form"><legend>Login</legend>
    <form action="{{ path('login_check') }}" method="post">
            <label for="username">Email:</label><br />
            <input type="text" id="username" name="_username" value="{{ last_username }}" /><br />
            <label for="password">Password:</label><br />
            <input type="password" id="password" name="_password" /><br /><br />
            <input type="submit" name="login" value="Login" />
    </form>
</fieldset>
{% endblock %}