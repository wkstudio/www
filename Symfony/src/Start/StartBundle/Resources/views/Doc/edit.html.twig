{% extends "StartStartBundle::layout.html.twig" %}

{% block title %} Documentation {% endblock %}

{% block addjs %}
<script type="text/javascript" src="{{ asset('bundles/calmclinic/js/ckeditor/ckeditor.js') }}"></script>
{% endblock %}

{% block content %}
<div id="content">
    <div class="title"><h3>Doc:{{doc.doc_title}} [EDIT]</h3></div>
    <table width="100%">
    <tr>
    <td style="text-align: left;">
    <input type="text" value="{{doc.doc_title}}"/>
    </td>
    <td style="text-align: right;">
    <input class="control-button" type="button" value="DELETE"/>
    </td>
    </tr>
    </table>
    <div class="edit-text">
    <form action="{{ path('doc_edit') }}" method="POST">
    <textarea class="ckeditor" name="editor1">{{doc.doc_body}}</textarea>
    <input class="control-button" type="submit" value="SAVE"/>
    </form>
    </div>
</div>
{% endblock %}